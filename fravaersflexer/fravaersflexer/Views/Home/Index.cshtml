@using fravaersflexer.Models;

@model IEnumerable<Person>
@{
    ViewData["Title"] = "Home Page";
    IDictionary<string, int> Sum_Educations = ViewData["EducationData"] as IDictionary<string, int>;
}

<!-- Statistik Sektion -->
  <section class="container mx-auto py-10">
    <div class="grid  grid-cols-1 lg:grid-cols-2 sm:gap-10">  


        <!-- Fraværsstatistik rubrik -->
        <div class=" bg-slate-800 sm:rounded-xl h-[26rem] p-6">
            <h1 class="text-2xl font-medium text-center pb-2 text-white">Fraværs statistik</h1>
            <div class="bg-flexprimary w-2/6 h-1 rounded-lg mx-auto mb-1"></div>
            <p class="text-xs text-gray-400 text-center mb-5">gennemsnitlig fravær for uddandelserne</p>

            
            <div class="grid grid-cols-8 mb-2">
                <div class="col-span-2 text-center">
                    <h1 class=" text-sm md:text-lg text-gray-400 font-bold">0 %</h1>
                </div>
                <div class="col-span-6 text-right">
                    <h1 class="text-sm md:text-lg text-gray-400 font-bold">100%</h1>
                </div>
            </div>

            <div class="grid grid-cols-8">
                <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-flexprimary absolute z-10"></div>
                </div>
                <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-blue-500/30 absolute"></div>
                </div>
                <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-blue-500/30 absolute "></div>
                </div>
                <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-blue-500/30 absolute "></div>
                </div>
                <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-blue-500/30 absolute "></div>
                </div>
                <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-blue-500/30 absolute "></div>
                </div>
                <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-blue-500/30 absolute "></div>
                </div>
                    <div class="col-span-1 flex flex-row justify-end">
                    <div class="w-[0.3rem] rounded-lg h-64 bg-blue-500/30 absolute "></div>
                </div>
            </div>

            <div class="flex flex-col space-y-4">
                <div class="grid grid-cols-8 items-center ">
                    <h1 class="text-sm md:text-lg font-bold text-white mr-5 col-span-1">HTX</h1>
                    <div class="w-34  rounded-r-full h-6 col-span-7 -z-0">
                        <div class="bg-flexprimary text-xs font-extrabold text-blue-100 text-right pr-5 p-0.5 leading-none rounded-r-full h-6" style="width:@Sum_Educations["HTX"]%">@Sum_Educations["HTX"] %</div>
                    </div>
                </div>
                <div class="grid grid-cols-8 items-center ">
                    <h1 class="text-sm md:text-lg font-bold text-white mr-5 col-span-1 ">HHX</h1>
                    <div class="w-34  rounded-r-full h-6 col-span-7 -z-0">
                        <div class="bg-flexprimary text-xs font-extrabold text-blue-100 text-right pr-5 p-0.5 leading-none rounded-r-full h-6" style="width:@Sum_Educations["HHX"]%">@Sum_Educations["HHX"] %</div>
                    </div>
                </div>
                <div class="grid grid-cols-8 items-center ">
                    <h1 class="text-sm md:text-lg font-bold text-white mr-5 col-span-1">STX</h1>
                    <div class="w-34  rounded-r-full h-6 col-span-7 -z-0">
                        <div class="bg-flexprimary text-xs font-extrabold text-blue-100 text-right pr-5 p-0.5 leading-none rounded-r-full h-6" style="width:@Sum_Educations["STX"]%">@Sum_Educations["STX"] %</div>
                    </div>
                </div>
                <div class="grid grid-cols-8 items-center ">
                    <h1 class="text-sm md:text-lg font-bold text-white mr-5 col-span-1">HF</h1>
                    <div class="w-34  rounded-r-full h-6 col-span-7 -z-0">
                        <div class="bg-flexprimary text-xs font-extrabold text-blue-100 text-right pr-5 p-0.5 leading-none rounded-r-full h-6" style="width:@Sum_Educations["HF"]%">@Sum_Educations["HF"] %</div>
                    </div>
                </div>
                <div class="grid grid-cols-8 items-center ">
                    <h1 class=" text-sm md:text-lg font-bold text-white mr-5 col-span-1">EUX</h1>
                    <div class="w-34  rounded-r-full h-6 col-span-7 -z-0">
                        <div class="bg-flexprimary text-xs font-extrabold text-blue-100 text-right pr-5 p-0.5 leading-none rounded-r-full h-6" style="width:@Sum_Educations["EUX"]%">@Sum_Educations["EUX"] %</div>
                    </div>
                </div>
                <div class="grid grid-cols-8 items-center ">
                    <h1 class="text-sm md:text-lg font-bold text-white mr-5 col-span-1">EUD</h1>
                    <div class="w-34  rounded-r-full h-6 col-span-7 -z-0">
                        <div class="bg-flexprimary text-xs font-extrabold text-blue-100 text-right pr-5 p-0.5 leading-none rounded-r-full h-6" style="width:@Sum_Educations["EUD"]%">@Sum_Educations["EUD"] %</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Fraværspodiet rubrik -->
        <div class="relative bg-slate-800 sm:rounded-xl h-[26rem]">
            <div class="p-6">
                <h1 class="text-2xl font-medium text-center pb-2 text-white">Fraværs Podiet</h1>
                <div class="bg-flexprimary w-2/6 h-1 rounded-lg mx-auto mb-1"></div>
                <p class="text-xs text-gray-400 text-center mb-5">3 elever med mest fravær i hele landet</p>
            </div>
            
            @{
                IEnumerable<Person> Winners = ViewData["Winners"] as IEnumerable<Person>;

                Person firstPlace = new Person();
                firstPlace = Winners.First();
                Person secondPlace = new Person();
                secondPlace = Winners.Skip(1).First();
                Person thirdPlace = new Person();
                thirdPlace = Winners.Skip(2).First();
            }

            <div class="flex flex-row justify-items-center w-full rounded-b-lg text-white">
                <div class="basis-1/3 h-28 text-center mt-24 p-2 sm:p-0"> 
                        <h1 class="text-sm sm:text-lg font-bold mb-0">@secondPlace.Name</h1>
                    <p class="text-xs sm:text-sm mt-0 text-gray-400">@secondPlace.Age | @secondPlace.SchoolName | @secondPlace.AbsencePercentage %</p>
                </div>
                <div class="basis-1/3 h-28 text-center mt-12 p-2 sm:p-0">
                    <h1 class="text-sm sm:text-lg font-bold mb-0 text-flexprimary shadow-flexprimary">@firstPlace.Name</h1>
                    <p class="text-xs sm:text-sm mt-0 text-gray-400">@firstPlace.Age | @firstPlace.SchoolName | @firstPlace.AbsencePercentage %</p>
                </div>
                <div class="basis-1/3 h-28 text-center mt-32 p-2 sm:p-0">
                    <h1 class="text-sm sm:text-lg font-bold mb-0">@thirdPlace.Name</h1>
                    <p class="text-xs sm:text-sm mt-0 text-gray-400">@thirdPlace.Age | @thirdPlace.SchoolName | @thirdPlace.AbsencePercentage %</p>
                </div>
            </div>
            <div class="flex flex-row justify-items-center absolute bottom-0 w-full items-end sm:rounded-b-lg text-white">
                <div class="basis-1/3 h-28 bg-slate-600 sm:rounded-bl-lg justify-center ">
                    <div class="absolute top-[55%] left-[13.5%] flex flex-row">
                        <h1 class="text-3xl text-flexprimary">2</h1>
                        <h1 class="text-lg">nd</h1>
                    </div>
                </div>
                <div class="basis-1/3 h-40 bg-flexprimary justify-center shadow-lg shadow-flexprimary/40">
                    <div class="absolute top-[30%] left-[47%] flex flex-row">
                        <h1 class="text-3xl text-white font-bold">1</h1>
                        <h1 class="text-lg">st</h1>
                    </div>
                </div>
                <div class="basis-1/3 h-20 bg-slate-600 sm:rounded-br-lg">
                    <div class="absolute top-[65%] left-[80%] flex flex-row">
                        <h1 class="text-3xl text-flexprimary">3</h1>
                        <h1 class="text-lg">rd</h1>
                    </div>
                </div>
            </div>
        </div>

    </div>
  </section>

  <!-- Tabel sektion -->
<section class="container mx-auto">
    <div class="relative rounded-t-xl mb-0 overflow-auto bg-flexprimary h-2"></div>
    <div class="overflow-hidden bg-slate-800">
        <table class="table-auto w-full text-left text-sm text-white ">
            <thead>
                <tr class="bg-flexprimary p-8 h-10">
                    <th class="pl-8">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Navn</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["AgeSortParm"]">Alder</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["SchoolSortParm"]">Skole</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["EducationSortParm"]">Uddandelse</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["ClassSortParm"]">Årgang</a>
                    </th>
                    <th class="pr-8">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["AbsenceSortParm"]">Fraværsprocent</a>
                    </th>
                </tr>
            </thead>
            <tbody class="bg-black rows">
                @foreach (Person persons in Model)
                {
                    <tr>
                        <th class="h-10 pl-8">@persons.Name</th>
                        <th class="h-10">@persons.Age</th>
                        <th class="h-10">@persons.SchoolName</th>
                        <th class="h-10">@persons.EducationName</th>
                        <th class="h-10">@persons.ClassName</th>
                        <th class="h-10 pr-8">@persons.AbsencePercentage</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="relative rounded-b-xl mt-0 overflow-auto bg-slate-800 h-2"></div>
</section>