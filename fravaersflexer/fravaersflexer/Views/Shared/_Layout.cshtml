<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FravaersFlex</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body class="bg-flexdark font-sans">


  <header class="text-white">
    <div class="container mx-auto flex flex-wrap p-3 flex-col md:flex-row items-center ">
      <a class="flex title-font font-medium items-center text-gray-50 mb-2 md:mb-0 mr-4">
        <span class="ml-3 text-xl ">Fraværsflex</span>
        <div class="bg-flexprimary w-1 h-8 rounded-lg ml-3 md:inline hidden"></div>
      </a>
      <div class="bg-flexprimary w-40 h-1 rounded-lg mx-auto mb-1 md:hidden"></div>
      <nav class="md:mr-auto flex flex-wrap items-center text-base justify-center text-gray-400">
        <a class="mr-5 bg-transparent hover:text-gray-400 transition duration-200 ease-in-out hover:-translate-y-1 hover:scale-105 "
          asp-area="" asp-controller="Home" asp-action="Index">Oversigten</a>
        <a class="mr-5 hover:text-gray-400 transition duration-200 ease-in-out hover:-translate-y-1 hover:scale-105 "
          asp-area="" asp-controller="Home" asp-action="About">Om os</a>
      </nav>
      <a asp-area="" asp-controller="Home" asp-action="Register">
          <button class="btn-primary mt-4 md:mt-0" >
            Registrer
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
      </a>
    </div>
  </header>




    <section class="container mx-auto">
            @RenderBody()
    </section>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>